{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es5", "es6", "dom", "es2016"],
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true, // Enable this to import JSON modules
    "moduleResolution": "node" // This often needs to be set as well
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"]
}
